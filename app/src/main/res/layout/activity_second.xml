<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="800dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="40dp"

    tools:ignore="ExtraText,RtlHardcoded">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="321dp"
        android:layout_height="251dp"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="62dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="321dp"
            android:layout_height="251dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="507dp"
            app:srcCompat="@drawable/mainreg"
            tools:layout_editor_absoluteY="32dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="210dp"
            android:layout_height="44dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="159dp"
            android:text="@string/get_started"

            android:textColor="#252525"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/text2"
            android:layout_width="183dp"
            android:layout_height="17dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="203dp"

            android:text=" by creating a free account"
            android:textColor="#252525"
            android:textSize="14dp"

            app:layout_constraintStart_toStartOf="parent" />

    </FrameLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputfullname"
        style="@style/CustomTextInputLayout"
        android:layout_marginStart="32dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="32dp"
        android:hint="Full name"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/purple_500"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:endIconDrawable="@drawable/person_24dp_5f6368_fill0_wght400_grad0_opsz24"
        app:endIconMode="custom"
        app:endIconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputfullname1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>





    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/validemaill"
        style="@style/CustomTextInputLayout"
        android:layout_marginStart="32dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="32dp"
        android:hint="Valid email"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/purple_500"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:endIconDrawable="@drawable/mail_24dp_5f6368_fill0_wght400_grad0_opsz24"
        app:endIconMode="custom"
        app:endIconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/validemaill1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phonenumber"
        style="@style/CustomTextInputLayout"
        android:layout_marginStart="32dp"
        android:layout_marginTop="399dp"
        android:layout_marginEnd="32dp"
        android:hint="Phone number"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/purple_500"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:endIconDrawable="@drawable/phone_iphone_24dp_5f6368_fill0_wght400_grad0_opsz24"
        app:endIconMode="custom"
        app:endIconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phonenumber1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/strongpasswd"
        style="@style/CustomTextInputLayout"
        android:layout_marginStart="32dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="32dp"
        android:hint="Strong Password"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/purple_500"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:endIconDrawable="@drawable/lock_24dp_5f6368_fill0_wght400_grad0_opsz24"
        app:endIconMode="custom"
        app:endIconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/strongpasswd1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="535dp"
        android:layout_marginLeft="12dp"
        android:buttonTint="@color/cbcbcb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:background="@drawable/style"/>

    <TextView
        android:id="@+id/textlink2"
        android:layout_width="241dp"
        android:layout_height="10dp"
        android:layout_marginTop="535dp"
        android:layout_marginLeft="30dp"
        android:text="@string/link2"
        android:textSize="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/button2"
        android:layout_width="280dp"
        android:layout_marginStart="34dp"
        android:layout_height="60dp"
        android:layout_marginTop="660dp"
        android:text="@string/next"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/memberlogin"
        android:layout_width="176dp"
        android:layout_height="16dp"
        android:layout_marginTop="743dp"
        android:layout_marginLeft="83dp"
        android:text="@string/memberlink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />  <!-- Makes URLs clickable -->



</androidx.constraintlayout.widget.ConstraintLayout>